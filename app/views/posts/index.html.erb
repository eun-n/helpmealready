<h1>Posts</h1>


<% @posts.each do |post| %>
<div class="post">
	<img src="<%= post.picture %>">
	<h2><%= post.title %></h2>
	<ul>
	<% for tag in post.tags %>
		<li> <%= link_to tag.name, tag_path(tag) %></li>
	<% end %>
	</ul>

   <%= link_to 'Edit', edit_post_path(post) %>
	<%= link_to 'Delete', post, method: :delete %>
</div>
<% end %>